<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Helpers.PDFUploadActivity"
    android:orientation="vertical"
    android:padding="20dp"
    >


    <TextView
        android:layout_marginTop="200dp"
        android:text="Please enter a file name and click 'Upload' to select a file to store"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/text_pdfName"
        android:hint="Enter PDF File Name"
        android:textSize="22sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal">
    </EditText>

    <Button
        android:textSize="17sp"
        android:background="#deaa00"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_pdfUpload"
        android:layout_gravity="center_horizontal"
        android:text="Upload"
        android:textAllCaps="false"
        >
    </Button>

</LinearLayout>